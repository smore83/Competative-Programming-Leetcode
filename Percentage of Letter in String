class Solution {
public:
    int percentageLetter(string s, char letter) {
       
        int count=0;
         int n=s.length();
        for(int i=0;i<n;i++){
            if(letter==s[i]){
                count+=1;
            }
        }
       //int perc=count/n;
        //cout<<perc<<endl;
        int per=count*100;
        // cout<<per<<endl;
        return per/n;
    }
};



